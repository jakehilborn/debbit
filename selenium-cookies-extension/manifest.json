{

  "description": "seleniumcookies003",
  "manifest_version": 2,
  "name": "seleniumcookies003",
  "version": "4.0",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["background.js"]
    }
  ],
 
  "browser_action": {
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "seleniumcookies003@jakehilborn.com"
    }
  },

  "applications": {
    "gecko": {
      "id": "seleniumcookies003@jakehilborn.com"
    }
  },

  "permissions": [
    "cookies",
    "storage",
    "<all_urls>"
  ]
}
